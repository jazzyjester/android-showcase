<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                    android:angle="135"
                    android:endColor="@color/pog_gold2"
                    android:startColor="@color/pog_gold1"
                    android:type="linear"/>

        </shape>
